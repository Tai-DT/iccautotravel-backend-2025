{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@generated/*": ["generated/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noImplicitThis": false,
    "isolatedModules": false,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "src/typings.d.ts", "src/express.d.ts", "prisma/**/*.ts"]
}

